<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/bg_main">

<ImageView android:layout_height="wrap_content" android:background="@drawable/title_main" android:id="@+id/Title" android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_marginTop="15dip"></ImageView>



<LinearLayout android:id="@+id/MainLeftButtons" android:orientation="vertical" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_below="@+id/Title" android:gravity="center_horizontal" android:layout_width="fill_parent"><Button android:textStyle="bold" android:textColor="#FFFFFF" android:background="@xml/button_selector" android:text="@string/button_singlePlayer" android:layout_width="120dip" android:layout_height="45dip" android:id="@+id/SinglePlayerButton" android:layout_marginTop="25dip"></Button>
<Button android:textStyle="bold" android:textColor="#FFFFFF" android:background="@xml/button_selector" android:text="@string/button_multiplayer" android:layout_width="120dip" android:layout_height="45dip" android:id="@+id/MultiplayerButton" android:layout_marginTop="25dip"></Button>
<Button android:textStyle="bold" android:textColor="#FFFFFF" android:background="@xml/button_selector" android:text="@string/button_stats" android:layout_width="120dip" android:layout_height="45dip" android:id="@+id/StatsButton" android:layout_marginTop="25dip"></Button>




<Button android:id="@+id/MoreButton" android:background="@xml/button_selector" android:layout_width="120dip" android:layout_height="45dip" android:layout_marginTop="25dip" android:textStyle="bold" android:textColor="#FFFFFF" android:text="@string/button_more"></Button>
</LinearLayout>


<LinearLayout android:id="@+id/MainRightButtons" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_width="fill_parent" android:gravity="center_horizontal" android:layout_below="@+id/MainLeftButtons" android:orientation="vertical" android:visibility="gone"><Button android:textStyle="bold" android:textColor="#FFFFFF" android:text="@string/button_prefs" android:layout_marginTop="25dip" android:layout_width="120dip" android:layout_height="45dip" android:id="@+id/SettingsButton" android:background="@xml/button_selector"></Button><Button android:textStyle="bold" android:textColor="#FFFFFF" android:text="@string/button_help" android:layout_marginTop="25dip" android:layout_width="120dip" android:layout_height="45dip" android:id="@+id/HelpButton" android:background="@xml/button_selector"></Button><Button android:textStyle="bold" android:textColor="#FFFFFF" android:text="@string/button_about" android:layout_marginTop="25dip" android:layout_width="120dip" android:layout_height="45dip" android:id="@+id/AboutButton" android:background="@xml/button_selector"></Button><Button android:id="@+id/BackButton" android:textStyle="bold" android:textColor="#FFFFFF" android:layout_width="120dip" android:layout_height="45dip" android:layout_marginTop="25dip" android:text="@string/button_back" android:background="@xml/button_selector"></Button>







</LinearLayout>
<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:orientation="vertical" android:layout_height="wrap_content" android:layout_alignParentBottom="true"><TextView android:id="@+id/Copyright" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_gravity="center" android:textColor="#FFFFFF" android:text="@string/copyright" android:layout_height="wrap_content"></TextView>
</LinearLayout>
</RelativeLayout>
